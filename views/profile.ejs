<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title><%= user.username %>'s profile</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<% include ./partials/menu.ejs %>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>
				<!-- Here we want to insert a view which will display our plugins list
			 			We could use a MySQL Database to store a simple object that will contain
						the basic informatiions that we will need :
						id of the plugin, the pluginname, the author, the type, the description, the link to a more detailed page, the download link.
						The plugins list will display 10 plugins per page.
						We could create a json list for each user, linked to its account, and explore it every time he is connected to check which plugin he already downloaded
					-->
			<p>
						<strong>id</strong>: <%= user.id %><br>
						<strong>username</strong>: <%= user.username %><br>
						<strong>password</strong>: <%= user.password %>
					</p>

			</div>
		</div>

	</div>

</div>
	<% include ./partials/footer %>
</body>
</html>
