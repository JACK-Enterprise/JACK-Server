<!-- views/plugins.ejs -->
<!doctype html>
<html>
<head>
	<title>Plugins Manager</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-plug"></span>Plugins</h1>
		<% include ./partials/menu.ejs %>
	</div>
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<div class="row">

		<div class="col-sm-12">
			<div class="well">
				<% if (user.admin){ %>
				<a href="/addplugin" class="btn btn-primary	 btn-sm">Add a Plugin</a>
				<% }                %>
				<h3>Plugins list</h3>
				<p>
					<table  cellpadding="8" cellspacing="1" width="100%">
						<tr>
      					<th>Name</th>
      					<th>Author</th>
      					<th>Size</th>
   					</tr>
			<%	for( i = 0; i < plugins.length; i ++){ %>
							<tr>
								<th> <a href="/plugin/:<%= plugins[i].id %>">	<%= plugins[i].name %> </a> </th>
								<th>	<%= plugins[i].author %> </th>
								<th>  <%= plugins[i].size %> B </th>
							</tr>
			<%	} %>
					</table>

			</div>
		</div>
	</div>
</div>
	<% include ./partials/footer %>
</body>
</html>
